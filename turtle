import turtle

print("Please enter the length of each side:")
side_length = int(input())

turtle.forward(side_length)
turtle.left(90)
turtle.forward(side_length)
turtle.left(90)
turtle.forward(side_length)
turtle.left(90)
turtle.forward(side_length)
turtle.left(90)

turtle.hideturtle()
turtle.done()

